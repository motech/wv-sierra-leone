{
  "_id": "rule-2-send-sms-to-patient",
  "name": "rule #2: Send sms to patient",
  "actions": [
    {
      "displayName": "sms.send",
      "channelName": "sms.api",
      "moduleName": "motech-sms-api-bundle",
      "moduleVersion": "0.21.0.SNAPSHOT",
      "subject": "SendSMS",
      "values": {
        "message": "{{ad.3980fa00249eb3bf73e200bd85061c11.StringContent#2.value?format({{ad.3980fa00249eb3bf73e200bd85062954.CaseInfo#0.fieldValues.mother_name}})}}",
        "number": "+232 {{ad.3980fa00249eb3bf73e200bd85062954.CaseInfo#0.fieldValues.mother_phone_number?substring(1)}}"
      }
    }
  ],
  "trigger": {
    "displayName": "msgCampaign.send.message",
    "channelName": "msgCampaign.name",
    "moduleName": "motech-message-campaign",
    "moduleVersion": "0.21.0.SNAPSHOT",
    "subject": "org.motechproject.messagecampaign.fired-campaign-message"
  },
  "enabled": true,
  "taskConfig": {
    "steps": [
      {
        "@type": "FilterSet",
        "order": 0,
        "filters": [
          {
            "displayName": "Campaign name (Trigger)",
            "key": "trigger.CampaignName",
            "type": "UNICODE",
            "negationOperator": true,
            "operator": "task.equals",
            "expression": "Mother Referral Reminder"
          }
        ]
      },
      {
        "@type": "DataSource",
        "order": 1,
        "providerName": "commcare.name",
        "providerId": "3980fa00249eb3bf73e200bd85062954",
        "objectId": 0,
        "type": "CaseInfo",
        "name": "id",
        "lookup": [
          {
            "field": "id",
            "value": "{{trigger.ExternalID?split(:,1)}}"
          }
        ],
        "failIfDataNotFound": true
      },
      {
        "@type": "FilterSet",
        "order": 2,
        "filters": [
          {
            "displayName": "Open (Case#0 (Commcare))",
            "key": "ad.3980fa00249eb3bf73e200bd85062954.CaseInfo#1.fieldValues.open",
            "type": "UNICODE",
            "negationOperator": true,
            "operator": "task.equals",
            "expression": "true"
          }
        ]
      },
      {
        "@type": "DataSource",
        "order": 3,
        "providerName": "commcare.name",
        "providerId": "3980fa00249eb3bf73e200bd85062954",
        "objectId": 1,
        "type": "CaseInfo",
        "name": "id",
        "lookup": [
          {
            "field": "id",
            "value": "{{trigger.ExternalID?split(:,0)}}"
          }
        ],
        "failIfDataNotFound": true
      },
      {
        "@type": "DataSource",
        "order": 4,
        "providerName": "cmslite.name",
        "providerId": "3980fa00249eb3bf73e200bd85061c11",
        "objectId": 2,
        "type": "StringContent",
        "name": "cmslite.languageAndName",
        "lookup": [
          {
            "field": "name",
            "value": "MotherReferralReminder"
          },
          {
            "field": "language",
            "value": "English"
          }
        ],
        "failIfDataNotFound": true
      }
    ]
  }
}