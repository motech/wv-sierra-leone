<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config/>

    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="moduleName" value="sierra-leone"/>
        <constructor-arg name="url" value="../sierra-leone/resources/index.html"/>
        <constructor-arg name="angularModules">
            <list>
                <value>sierra-leone</value>
            </list>
        </constructor-arg>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../sierra-leone/resources/messages/"/>
            </map>
        </constructor-arg>
        <constructor-arg name="header">
            <bean class="org.motechproject.osgi.web.Header"/>
        </constructor-arg>
    </bean>

    <context:component-scan base-package="org.worldvision.sierraleone"/>

</beans>
